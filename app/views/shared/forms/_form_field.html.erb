<%= form.label field,
               translation,
               class: "block text-lg #{'text-red-500' if model.errors.key?(field)} #{'mt-8' if margin ||= false}" %>

<%=
  form.send(
    type,
    field,
    class: "block w-full text-xl p-2 border-2 focus-visible:outline-none rounded-sm border-slate-200 focus-visible:border-slate-400"
  )
%>

<% model.errors.messages.fetch(field, []).each do |error| %>
  <span class="block text-sm text-red-500"><%= translation %> <%= error %></span>
<% end %>